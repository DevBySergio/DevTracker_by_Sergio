{
  "name": "devtracker",
  "displayName": "DevTracker by Sergio",
  "description": "Professional analytics dashboard for developers.",
  "version": "1.3.1",
  "publisher": "DevBySergio",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevBySergio/DevTracker_by_Sergio"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devtracker.showStats",
        "title": "DevTracker: Open Dashboard"
      },
      {
        "command": "devtracker.setDailyGoal",
        "title": "DevTracker: Set Daily Goal"
      },
      {
        "command": "devtracker.exportCSV",
        "title": "DevTracker: Export Data (CSV)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.1"
  }
}
